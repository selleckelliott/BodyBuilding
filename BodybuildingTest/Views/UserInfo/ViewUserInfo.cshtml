@model BodybuildingTest.Models.UserInformation.UserInfo


<h3>@Model.FirstName @Model.LastName Information</h3>

<table class="table">
    <tr>
        <th>UserID</th>
        <th>Username</th>
        <th>Email</th>
        <th>Password</th>
        <th>Create Time</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Most Recent Workout</th>
    </tr>
    <tr>
        <td>@Model.UserID</td>
        <td>@Model.Username</td>
        <td>@Model.Email</td>
        <td>@Model.Password</td>
        <td>@Model.Create_Time</td>
        <td>@Model.FirstName</td>
        <td>@Model.LastName</td>
        <td>@Model.Most_Recent_Workout</td>
    </tr>
</table>
<div style="display: block">
    <a href="/UserInfo/UpdateUserInfo/@Model.UserID">Update this User</a>
</div>
<div style="display: block">
    @using (Html.BeginForm("DeleteUser", "UserInfo", FormMethod.Post))
    {
        <input type="hidden" name="UserID" value="@Model.UserID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this User" />
    }
</div>